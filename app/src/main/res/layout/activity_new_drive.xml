<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".NewDrive">

<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_gravity="center"-->
<!--        android:gravity="center"-->
<!--        android:orientation="vertical"-->
<!--        android:padding="10dp">-->

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:onClick="back"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="2.5"
        android:backgroundTint="@color/black">

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#1E2223"
            android:gravity="center_vertical"
            android:text="Drive Details"
            android:textSize="22sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="2"
        android:backgroundTint="@color/black"
        android:outlineProvider="bounds"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <EditText
            android:id="@+id/driveName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:backgroundTint="#1E2223"
            android:ems="10"
            android:hint="Enter Drive Title"
            android:inputType="textPersonName"
            android:textColorHint="#4C4C4C"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="2"
        android:backgroundTint="@color/black"
        android:outlineProvider="bounds"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <EditText
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:backgroundTint="#1E2223"
            android:ems="10"
            android:hint="Enter Receiver's Number"
            android:inputType="number"
            android:textColorHint="#4C4C4C"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="2"
        android:backgroundTint="@color/black"
        android:outlineProvider="bounds"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <EditText
            android:id="@+id/target"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:backgroundTint="#1E2223"
            android:ems="10"
            android:hint="Enter Target Amount"
            android:inputType="numberDecimal"
            android:textColorHint="#4C4C4C"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="2"
        android:backgroundTint="@color/black"
        android:outlineProvider="bounds"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:backgroundTint="#1E2223"
            android:ems="10"
            android:hint="Enter Recceiver's Address"
            android:inputType="textPersonName"
            android:textColorHint="#4C4C4C"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="12"
        android:backgroundTint="#1E2223"
        android:outlineProvider="bounds"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <EditText
            android:id="@+id/driveDesc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:backgroundTint="#1E2223"
            android:scrollHorizontally="false"
            android:ems="10"
            android:gravity="start"
            android:hint="Enter Drive Description"
            android:singleLine="false"
            android:inputType="textCapSentences|textMultiLine"
            android:textColorHint="#4C4C4C"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#D56565"
            android:onClick="cancel"
            android:text="Cancel" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#D56565"
            android:onClick="clear"
            android:text="Clear" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/mustard"
            android:onClick="addDrive"
            android:text="Add "
            android:textColor="@color/black" />

    </LinearLayout>

<!--    </LinearLayout>-->

</LinearLayout>